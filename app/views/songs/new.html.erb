<%= form_with url: "/songs", model: @song, local: true,  method: :post do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <%# binding.pry %>

  <%= f.label :song_name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.hidden_field :artist_name %>
  <%= hidden_field_tag :artist_name, @user %>

  <%= f.label :genre %>
  <%= f.text_field :genre, class: 'form-control' %>

  <%= f.label :Audio_File %>
  <%= f.file_field :mp3_file, accept: 'application/mp3', class: 'form-control' %>

  <%= f.label :image %>
  <%= f.file_field :image_file, class: 'form-control' %>

  <%= f.submit "Upload Song", class: 'btn' %>
<% end %>
