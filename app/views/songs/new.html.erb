<%= form_with url: "/songs", model: @song, local: true,  method: :post do |f| %>

  <%= render 'shared/error_messages', object: f.object %>
  
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, accept: 'application/mp3', class: 'form-control' %>
  
  <%= f.label :genre %>
  <%= f.text_field :song_genre, class: 'form-control' %>

  <%= f.label :mp3_file %>
  <%= f.file_field :mp3_file, class: 'form-control' %>

  <%= f.submit "Upload Song", class: 'btn' %>
<% end %>
